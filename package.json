{
  "name": "@atem-connection/native-tools",
  "version": "0.0.1",
  "description": "Native tools for atem-connection",
  "main": "index.js",
  "typings": "index.d.ts",
  "license": "MIT",
  "maintainers": [
    {
      "name": "Julian Waller",
      "email": "git@julusian.co.uk"
    }
  ],
  "scripts": {
    "build": "napi build --platform --release  --js=false --dts index.d.ts .",
    "build:debug": "napi build --platform rust",
    "lint:raw": "run eslint --ext .ts --ext .js --ext .tsx --ext .jsx ",
    "lint": "run lint:raw .",
    "lint-fix": "run lint --fix",
    "unit": "run jest --forceExit",
    "test": "run lint && run unit",
    "watch": "run jest --watch",
    "release": "sofie-version",
    "reset": "git clean -dfx && git reset --hard && yarn",
    "validate:dependencies": "yarn npm audit --environment production && run license-validate",
    "validate:dev-dependencies": "yarn npm audit --environment development",
    "license-validate": "sofie-licensecheck --allowPackages caniuse-lite@1.0.30001319",
    "eslint": "./node_modules/.bin/eslint",
    "prettier": "./node_modules/.bin/prettier",
    "lint-staged": "./node_modules/.bin/lint-staged"
  },
  "engines": {
    "node": "^14.18 || ^16.14 || ^18.0"
  },
  "files": [
    "/dist",
    "/assets",
    "/CHANGELOG.md",
    "/README.md",
    "/LICENSE"
  ],
  "devDependencies": {
    "@napi-rs/cli": "^2.16.3",
    "@sofie-automation/code-standard-preset": "~2.4.6",
    "@types/jest": "^29.5.1",
    "@types/node": "^14.18.22",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "~4.9"
  },
  "prettier": "@sofie-automation/code-standard-preset/.prettierrc.json",
  "lint-staged": {
    "*.{css,json,md,scss}": [
      "prettier --write"
    ],
    "*.{ts,tsx,js,jsx}": [
      "yarn lint-fix"
    ]
  },
  "napi": {
    "name": "sofie-atem-connection-native-tools",
    "triples": {
      "additional": [
        "aarch64-apple-darwin",
        "aarch64-unknown-linux-gnu"
      ]
    }
  },
  "packageManager": "yarn@3.5.0"
}
